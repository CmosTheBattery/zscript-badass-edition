// xdeath replacements
CLASS CorpseTosser : Cyberdemon replaces Cyberdemon { 
	Default {
		Tag "Corpse Tosser";
	}
	States
	{
		XDeath:
			CYBG A 4;
			CYBG B 4 A_XScream;
