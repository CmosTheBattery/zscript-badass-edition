CLASS DriverSailor : WolfensteinSS  { //26020
	Default {
		
		Health 100;
		Speed 12;
		PainChance 200;
		ReactionTime 2;
		Dropitem "ClipBox";
		Tag "Tough Sailor";
	}
	States
	{
		Missile:
			SSWV E 3 A_FaceTarget;
			SSWV F 3 A_FaceTarget;
			SSWV G 1 Bright A_CPosAttack;
			SSWV G 1 Bright A_CPosAttack;
			SSWV F 3 A_FaceTarget;
			SSWV G 1 Bright A_CPosAttack;
			SSWV G 1 Bright A_CPosAttack;
			SSWV F 1 A_CPosRefire;
			Goto Missile+1;
		Pain:
			SSWV H 1;
			SSWV H 2 A_Pain;
			Goto See;
		Death:
			SSWV N 0;
			Goto XDeath;
		XDeath:
			SSWV N 5;
			SSWV O 2 A_StartSound("wolfss/death");
			SSWV O 3 A_XScream;
			SSWV P 5 A_NoBlocking;
			SSWV QRSTU 5;
			SSWV V -1;
			Stop;
		Raise:
			SSWV V 2 A_StartSound("sailor/raise");
			SSWV UTSRQPON 2;
			Goto See;
	}
}

